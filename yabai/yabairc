#bsp, stack or float

yabai -m config layout bsp

yabai -m config window_placement second_child

#padding

yabai -m config top_padding 14
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# mouse settings
yabai -m config mouse_follows_focus on

yabai -m config mouse_modifier ctrl
# set modifier + left-click drag to move window (default: move)
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window (default: resize)
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action stack


yabai -m rule --add app="^System Settings$" layer=above manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^iTerm2$" manage=off
yabai -m rule --add app="^Music$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Visual Studio Code$" manage=off
yabai -m rule --add app="^RStudio$" manage=off
yabai -m rule --add app="^Discord$" manage=off
yabai -m rule --add app="^Goodnotes$" manage=off
yabai -m rule --add app="^Stickies$" manage=off
yabai -m rule --add app="^Proton VPN$" manage=off


yabai -m config external_bar all:32:0

yabai -m config auto_balance off


#yabai --start-service